<template name="addFavorite" xmlns="http://ws.apache.org/ns/synapse">

    <parameter name="slideshowId" description="ID of the slideshow"/>
    <sequence>
        <property name="uri.var.slideshowId" expression="$func:slideshowId"/>
        <property name="POST_TO_URI" value="true" scope="axis2" type="STRING"/>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="{uri.var.apiUrl}/add_favorite?{uri.var.requiredParameters}&amp;{uri.var.autentication}&amp;slideshow_id={uri.var.slideshowId}"/>
            </endpoint>
        </call>
    </sequence>
</template>
