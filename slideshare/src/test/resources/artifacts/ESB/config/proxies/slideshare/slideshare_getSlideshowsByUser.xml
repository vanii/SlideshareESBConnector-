<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="slideshare_getSlideshowsByUser"
       transports="https http"
       startOnLoad="true"
       trace="disable">
    <description/>
    <target>
        <inSequence>
            <property name="apiKey" expression="json-eval($.apiKey)"/>
            <property name="sha1Key" expression="json-eval($.sha1Key)"/>
            <property name="usernameFor" expression="json-eval($.usernameFor)"/>
            <property name="username" expression="json-eval($.username)"/>
            <property name="password" expression="json-eval($.password)"/>
            <property name="limit" expression="json-eval($.limit)"/>
            <property name="offset" expression="json-eval($.offset)"/>
            <property name="detailed" expression="json-eval($.detailed)"/>
            <property name="getUnconverted" expression="json-eval($.getUnconverted)"/>
            <slideshare.init>
                <apiKey>{$ctx:apiKey}</apiKey>
                <sha1Key>{$ctx:sha1Key}</sha1Key>
                <username>{$ctx:username}</username>
                <password>{$ctx:password}</password>
            </slideshare.init>
            <slideshare.getSlideshowsByUser>
                <usernameFor>{$ctx:usernameFor}</usernameFor>
                <limit>{$ctx:limit}</limit>
                <offset>{$ctx:offset}</offset>
                <detailed>{$ctx:detailed}</detailed>
                <getUnconverted>{$ctx:getUnconverted}</getUnconverted>
            </slideshare.getSlideshowsByUser>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
</proxy>