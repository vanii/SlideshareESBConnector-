<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="slideshare_getSlideshow"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
    <target>
        <inSequence>
            <property name="apiKey" expression="json-eval($.apiKey)"/>
            <property name="sha1Key" expression="json-eval($.sha1Key)"/>
            <property name="slideshowId" expression="json-eval($.slideshowId)"/>
            <property name="slideshowUrl" expression="json-eval($.slideshowUrl)"/>
            <property name="username" expression="json-eval($.username)"/>
            <property name="password" expression="json-eval($.password)"/>
            <property name="excludeTags" expression="json-eval($.excludeTags)"/>
            <property name="detailed" expression="json-eval($.detailed)"/>
            <slideshare.init>
                <apiKey>{$ctx:apiKey}</apiKey>
                <sha1Key>{$ctx:sha1Key}</sha1Key>
                <username>{$ctx:username}</username>
                <password>{$ctx:password}</password>
            </slideshare.init>
            <slideshare.getSlideshow>
                <slideshowId>{$ctx:slideshowId}</slideshowId>
                <slideshowUrl>{$ctx:slideshowUrl}</slideshowUrl>
                <excludeTags>{$ctx:excludeTags}</excludeTags>
                <detailed>{$ctx:detailed}</detailed>
            </slideshare.getSlideshow>
            <respond/>
        </inSequence>
        <outSequence>
            <log/>
            <send/>
        </outSequence>
    </target>
    <description/>
</proxy>
